<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.form.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="product.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_weight_in_lbs']/../../../.." position="after">
        <div class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane" modifiers="{}"/>
            <div class="o_setting_right_pane" modifiers="{}">
                <b modifiers="{}">Authored Pricelist Cache API keys</b>
                <div class="text-muted" modifiers="{}">Defines the list of api keys authorized to retrieve prices from the api</div>
                <div class="mt16" modifiers="{}">
                    <field name="pricelist_cache_auhorize_apikey_ids"/>
                </div>
            </div>
        </div>
      </xpath>
    </field>
  </record>

</odoo>
